<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Editar Aluno</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/user/dashboard">Student Manager</a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/student/list">Alunos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/courses/list">Cursos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        <h1>Editar Aluno</h1>
        <form method="POST" action="/student/edit/<%= student.id %>">
            <div class="mb-3">
                <label for="name" class="form-label">Nome</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= student.name %>" required>
            </div>
            <div class="mb-3">
                <label for="age" class="form-label">Idade</label>
                <input type="number" class="form-control" id="age" name="age" value="<%= student.age %>" required>
            </div>
            <div class="mb-3">
                <label for="courseId" class="form-label">Curso</label>
                <select class="form-select" id="courseId" name="courseId">
                    <% courses.forEach(course => { %>
                        <option value="<%= course.id %>" <%= course.id == student.courseId ? 'selected' : '' %>><%= course.name %></option>
                    <% }) %>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a href="/students" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
    <footer class="text-center mt-4">
        <p>&copy; 2024 App. Todos os direitos reservados.</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
