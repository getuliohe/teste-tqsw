<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Lista de Alunos</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/user/dashboard">Student Manager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/student/list">Alunos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/courses/list">Cursos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        <h1 class="text-center">Lista de Alunos</h1>
        <a href="/students/add" class="btn btn-primary mb-3">Adicionar Aluno</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome do Aluno</th>
                    <th>Idade</th>
                    <th>Curso</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% students.forEach(student => { %>
                  <tr>
                    <td><%= student.id %></td>
                    <td><%= student.name %></td>
                    <td><%= student.age %></td>
                    <td><%= student.course_name ? student.course_name : 'Sem curso' %></td>
                    <td>
                      <a href="/student/edit/<%= student.id %>" class="btn btn-warning btn-sm">Editar</a>
                      <a href="/student/delete/<%= student.id %>" class="btn btn-danger btn-sm">Excluir</a>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
        </table>
    </div>
    <footer class="text-center mt-4">
        <p>&copy; 2024 App. Todos os direitos reservados.</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
